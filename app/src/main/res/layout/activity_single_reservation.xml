<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add TextViews or other views to display reservation details -->
    <TextView
        android:id="@+id/textViewReferenceID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reference ID: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: " />

    <TextView
        android:id="@+id/textViewReserveTrainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserved Train Name: " />

    <TextView
        android:id="@+id/textViewReserveTrainID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserved Train ID: " />

    <TextView
        android:id="@+id/textViewReservationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation Date: " />

    <TextView
        android:id="@+id/textViewBookingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Date: " />

    <TextView
        android:id="@+id/textViewNumberOfTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Tickets: " />

    <TextView
        android:id="@+id/textViewDepartureLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departure Location: " />

    <TextView
        android:id="@+id/textViewDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination: " />

    <!-- Add more TextViews for other reservation details -->

</LinearLayout>
